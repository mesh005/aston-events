extends layout

block content
  .position-relative.overflow-hidden.p-3.p-md-5.m-md-3.text-center.bg-light
    .col-md-5.p-lg-5.mx-auto.my-5
      h1.display-4.font-weight-normal Welcome to Aston Events!
      p.lead.font-weight-normal
        | Get involved and view the latest events happening on and off campus. Got an event you would like to set up? Register and organise an event now!
      a.btn.btn-primary(href='/register') Register
    .product-device.box-shadow.d-none.d-md-block
    .product-device.product-device-2.box-shadow.d-none.d-md-block

  each event, i in events
    .container-fluid
      .bg-dark.mr-md-3.pt-3.px-3.pt-md-5.px-md-5.text-center.text-white.overflow-hidden
          .my-3.py-3
            h2.display-5= event.event_name
            p.lead= event.description
          .bg-light.box-shadow.mx-auto(style='width: 80%; height: 300px; border-radius: 21px 21px 0 0;')
      form(action='/like/'+event._id, method='POST')
        .form-group
            a.btn.btn-outline-secondary.btm-sm(href='/events/'+event._id) Learn More
            button.btn.btn-success(type='submit') Like Event
            br
            if event.__v == 1
              p= event.__v+ " person has liked this event"
            else 
              p= event.__v + " people have liked this event"
    



    
        
      
