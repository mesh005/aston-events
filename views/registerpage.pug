extends layout

block content

  h1 Register
  form(method='POST', action='/register')
    #form-group
      label Username:
      input.form-control(name='username', type='text')
      #form-group
        label Email:
        input.form-control(name='email', type='email')
    #form-group
      label Password:
      input.form-control(name='password', type='password')
    #form-group
      label Confirm Password:
      input.form-control(name='password2', type='password')
    br
    input.btn.btn-primary(type='submit', value='Register')
    a.btn.btn-danger(href='/') Cancel
  
  


  
